<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jason.mhophyd.mhopsongs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mhop_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mhop_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SongListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongDisplayActivity"
            android:label="@string/title_activity_song_display"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>